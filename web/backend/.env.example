# =========================================
# DATABASE CONFIGURATION
# =========================================
DATABASE_URL="mysql://root:rootpassword@localhost:3307/curevirtual_db"

# =========================================
# JWT SECRET
# =========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# =========================================
# EMAIL CONFIGURATION
# =========================================
# Choose email provider: 'gmail' or 'sendgrid'
EMAIL_PROVIDER=gmail

# -------------------------
# Gmail/SMTP Configuration (if EMAIL_PROVIDER=gmail)
# -------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# -------------------------
# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
# -------------------------
SENDGRID_API_KEY=your-sendgrid-api-key-here

# -------------------------
# Common Email Settings
# -------------------------
FROM_EMAIL=noreply@curevirtual.com

# =========================================
# TWILIO CONFIGURATION (for SMS/Video)
# =========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY_SID=your-twilio-api-key-sid
TWILIO_API_KEY_SECRET=your-twilio-api-key-secret
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =========================================
# STRIPE CONFIGURATION (for payments)
# =========================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =========================================
# SERVER CONFIGURATION
# =========================================
PORT=5001
NODE_ENV=development

# =========================================
# CORS CONFIGURATION
# =========================================
CORS_ORIGIN=http://localhost:5173
